//https://leetcode.com/problems/power-of-three/

class Solution {
public:
    bool isPowerOfThree(int n) {
    
        if (n == 1)
            return true;
        
        if (n == 0)
		    return false;
    
		int pot = 0;
		
		while(n > 1) 
        {
			pot = n%3;
			n = n/3;
            if(pot != 0)
				return false;
		}

		if((pot == 0) && (n == 1)) {
			return true;
        }
	return false;
    }
};
